---
import { FaFacebookF, FaInstagram, FaLinkedinIn, FaTwitter } from 'react-icons/fa';
import { Phone, Mail, MapPin, Leaf } from 'lucide-react';
---
<footer class="relative bg-[#333333] text-white">
  <!-- Imagen redonda centrada en la parte superior del footer -->
  <img src="/images/stem.webp" alt="Hoja verdea" class="absolute top-0 right-8 filter opacity-30 transform -translate-y-1/2 w-32 h-32 rounded-full z-10"/>

  <!-- Logo + Navegación y Contacto -->
  <div class="container mx-auto px-6 lg:px-16 pt-14 pb-8 grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Columna Izquierda: Logo arriba, Navegación abajo -->
    <div class="flex flex-col items-center md:items-start space-y-6">
      <div class="inline-flex items-center space-x-2">
        <!--
        <span class="text-2xl font-bold">Verdea</span>
        -->
        <Leaf className="w-7 h-7" />
        <img src="/images/VerdeaLogo.webp" class="h-12 filter brightness-0 invert"/>
      </div>
      <h3 class="text-lg font-semibold">Páginas</h3>
      <nav class="flex flex-wrap justify-center md:justify-start gap-6">
        <a href="/" class="text-white hover:text-gray-300">Inicio</a>
        <a href="#productos" class="text-white hover:text-gray-300">Productos</a>
        <a href="#nosotros" class="text-white hover:text-gray-300">Nosotros</a>
        <a href="#contacto" class="text-white hover:text-gray-300">Contacto</a>
      </nav>
    </div>

    <!-- Columna Derecha: Contáctanos -->
    <div class="flex flex-col items-center md:items-start space-y-3 justify-self-center md:justify-self-end">
      <h3 class="text-lg font-semibold">Contáctanos</h3>
      <div class="flex items-center gap-2">
        <Phone className="w-5 h-5 text-gray-100" />
        <span class="text-gray-100 font-semibold">+505 1234 5678</span>
      </div>
      <div class="flex items-center gap-2">
        <Mail className="w-5 h-5 text-gray-100" />
        <span class="text-gray-100 font-semibold">hola@verdea.com</span>
      </div>
      <div class="flex items-center gap-2">
        <MapPin className="w-5 h-5 text-gray-100" />
        <span class="text-gray-100 font-semibold">UAM - Managua, Nicaragua</span>
      </div>
    </div>
    <!-- Redes -->
    <div class="flex space-x-4 justify-center md:justify-start">
      <a href="#" class="text-white hover:text-gray-400"><FaFacebookF className="w-5 h-5"/></a>
      <a href="#" class="text-white hover:text-gray-400"><FaInstagram className="w-5 h-5"/></a>
      <a href="#" class="text-white hover:text-gray-400"><FaLinkedinIn className="w-5 h-5"/></a>
      <a href="#" class="text-white hover:text-gray-400"><FaTwitter className="w-5 h-5"/></a>
    </div>
  </div>

  <!-- Sección Inferior: Nota y Copyright -->
  <div class="border-t border-gray-700">
    <div class="container mx-auto px-6 lg:px-24 py-6 flex flex-col items-center space-y-4 md:flex-row md:justify-between md:space-y-0">
      <!-- Derechos -->
      <span class="text-xs text-gray-300">
        © 2025 Verdea. Todos los derechos reservados.
      </span>
      <!-- Nota de redes -->
      <span class="text-[8px] text-gray-400 text-center md:mr-7 lg:ml-32">
        Funcionalidad de redes/contacto no disponible aún.
      </span>
      
      <nav class="md:ml-auto flex gap-4 sm:gap-6">
        <a href="#" class="text-xs hover:underline underline-offset-4 text-gray-300">Términos de Servicio</a>
        <a href="#" class="text-xs hover:underline underline-offset-4 text-gray-300">Política de Privacidad</a>
        <a href="#" class="text-xs hover:underline underline-offset-4 text-gray-300">Envíos</a>
      </nav>
    </div>
  </div>
</footer>
