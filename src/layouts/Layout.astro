---
// src/layouts/Layout.astro
import "../styles/global.css";
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/webp" href="/images/VerdeaLogo.webp" />
		<meta name="generator" content={Astro.generator} />
		<title>Verdea</title>
		<meta name="description" content="Verdea - Cosmética natural y ecológica. Descubre productos artesanales para el cuidado personal y del hogar, respetuosos con el medio ambiente." />
		<meta name="keywords" content="cosmética natural, ecológico, productos artesanales, cuidado personal, Verdea, medio ambiente, shampoo, jabón, acondicionador" />
		<meta name="author" content="Verdea" />
		<meta name="creator" content="https://github.com/ElVatoEste, https://github.com/Criqua" />
		<!-- Creadores: https://github.com/ElVatoEste y https://github.com/Criqua -->
		<!-- Open Graph -->
		<meta property="og:title" content="Verdea - Cosmética natural y ecológica" />
		<meta property="og:description" content="Descubre productos artesanales y ecológicos para el cuidado personal y del hogar." />
		<meta property="og:image" content="/images/VerdeaLogo.webp" />
		<meta property="og:url" content="https://verdea-psi.vercel.app/" />
		<meta property="og:type" content="website" />
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Verdea - Cosmética natural y ecológica" />
		<meta name="twitter:description" content="Descubre productos artesanales y ecológicos para el cuidado personal y del hogar." />
		<meta name="twitter:image" content="/images/VerdeaLogo.webp" />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		font-family: 'Montserrat', sans-serif;
		margin: 0;
		width: 100%;
		height: 100%;
		user-select: none;
		scroll-behavior: smooth;
		overflow-x: hidden;
	}
</style>
